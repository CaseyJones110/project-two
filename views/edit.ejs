<form action='/articles/<%= article._id %>?_method=PATCH' method='post'>
  <div class="form-group">
    <label for='title'>Title of Article</label></br>
    <input id='title' name='article[title]' type='text' value="<%= article.title %>">
  </div>
  <div class="form-group">
    <label for='categories'>Tags related to this article</label></br>
    <input id='categories' name='article[categories]' type='text' value="<%= article.categories %>">
  </div>
  <div class="form-group">
    <label for='body'>Contents of article</label></br>
    <textarea rows="6" name='article[body]'><%= article.body %></textarea>
  </div>
  <input type="submit">
</form>
